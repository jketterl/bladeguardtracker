<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" android:background="@drawable/balloon_overlay"
	android:layout_width="wrap_content">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_alignParentLeft="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/content" android:orientation="vertical">
		<TextView android:textSize="12dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/username"></TextView>
		<TextView android:textSize="10dip"
			android:layout_height="wrap_content"
			android:id="@+id/comment"
			android:layout_width="wrap_content"></TextView>
	</LinearLayout>
	<ImageView android:layout_height="wrap_content"
		android:src="@drawable/balloon_overlay_close" android:layout_width="wrap_content"
		android:paddingLeft="5dip" android:paddingRight="2dip"
		android:paddingTop="2dip" android:paddingBottom="2dip"
		android:id="@+id/balloon_overlay_close"
		android:layout_toRightOf="@id/content"></ImageView>

</RelativeLayout>
